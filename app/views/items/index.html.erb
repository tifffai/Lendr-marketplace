<p id="notice"><%= notice %></p>

<h1>Items</h1>

<table class="index-table">
  <thead class="index-table-head">
    <tr>
      <th>Name</th>
      <th>Category</th>
      <th>Description</th>
      <th>Terms</th>
      <th>Price</th>
      <th>Suburb</th>
      <th>State</th>
      <th>Availablity</th>
      <th>Next Available</th>
      <th>Preview</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody class="index-table-body">
    <% @items.each do |item| %>
      <tr>
        <td><%= item.name %></td>
        <td><%= link_to item.category.name, item.category %></td>
        <td><%= item.description %></td>
        <td><%= item.terms %></td>
        <td><%= number_to_currency(item.price/100.0) %></td>
        <td><%= item.suburb %></td>
        <td><%= item.state %></td>
        <td>
          <% if item.next_available < Time.now %>
            <strong>AVAILABLE!</strong>
            <% else %>
            <strong>UNAVAILABLE!</strong>
          <% end %>
        </td>
        <td><%= item.next_available.strftime('%a, %e %b %Y') %></td>
        <td><%= image_tag item.images.first, height: '80'%></td> 
        <td><%= link_to 'Show', item %></td>

        <% if item.user == current_user %>  
          <td><%= link_to 'Edit', edit_item_path(item) %></td>
          <td><%= link_to 'Destroy', item, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

